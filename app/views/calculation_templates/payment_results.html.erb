  <dd> <%= number_to_percentage(@apr, precision: 4) %></dd>

  <dt> Number of years</dt>
  <dd> <%= @num_years %></dd>

  <dt> Principal</dt>
  <dd> <%= number_to_currency(@principal, separator: ".")%> </dd>

